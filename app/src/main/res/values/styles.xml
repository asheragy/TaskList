<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/dark_green</item>
        <item name="android:textColor">@android:color/black</item>

        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:windowBackground">@color/background_off_white</item>
        <item name="android:shadowColor">@color/background_shadow_light</item>

        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>


        <item name="colorAccent">@color/yellow</item>

    </style>

    <!-- Secondary dark theme -->
    <style name="AppTheme_Dark" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dark_green</item>
        <item name="colorPrimaryDark">#507e28</item>
        <item name="android:textColor">@android:color/white</item>

        <item name="android:colorBackground">@color/background_off_black</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:shadowColor">@color/background_shadow_dark</item>

        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@color/background_off_white</item>

        <item name="colorAccent">@color/yellow</item>
    </style>

