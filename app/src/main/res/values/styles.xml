<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/material_light_green_500</item>
        <item name="colorPrimaryDark">@color/material_light_green_700</item>
        <item name="colorAccent">@color/material_amber_500</item>

        <item name="menuSaveDrawable">@drawable/ic_save_black</item>
        <item name="iconUnDeleteDrawable">@drawable/undelete</item>
        <item name="iconBackArrow">@drawable/ic_arrow_back_black_24dp</item>
    </style>

      <!-- Secondary dark theme -->
    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/material_light_green_700</item>
        <item name="colorPrimaryDark">@color/material_light_green_900</item>
        <item name="colorAccent">@color/material_amber_500</item>

        <item name="menuSaveDrawable">@drawable/ic_save_white</item>
        <item name="iconUnDeleteDrawable">@drawable/ic_delete_forever_white</item>
        <item name="iconBackArrow">@drawable/ic_arrow_back_white_24dp</item>
    </style>

</resources>
